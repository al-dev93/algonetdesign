{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "module": "Node16",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@assets": ["src/assets/*"],
      "@types/*": ["src/types/*"]
    },
    /* Bundler mode */
    "moduleResolution": "Node16",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    // NOTE: "jsx": "preserve", n'a pas fourni de résultat
    "jsx": "react-jsx",
    // NOTE: deux lignes ci-dessous ajoutées sans résultat probant
    "sourceMap": true,
    "esModuleInterop": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  // NOTE: paths depuis src/** etc. ajoutés sans résultat
  "include": ["src/**/*", "vite.config.ts", ".eslintrc.cjs"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
